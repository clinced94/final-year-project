<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#536588">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Your engine is running a bit low."
        android:id="@+id/low_engine_text"
        android:textSize="32dp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="#f1f0f4"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="What activity are you going to do to make it run just right?"
        android:id="@+id/what_activity_text"
        android:textSize="42dp"
        android:paddingLeft="20dp"
        android:password="false"
        android:phoneNumber="false"
        android:background="#f1f0f4"
        android:textColor="#536588"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_below="@+id/low_engine_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/low_list"
        android:choiceMode="multipleChoice"
        android:dividerHeight="@dimen/abc_action_bar_elevation_material"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="350dp"
        android:layout_marginBottom="5dp" />

</RelativeLayout>