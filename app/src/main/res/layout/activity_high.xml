<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/engine_is_high"
        android:id="@+id/high_engine_text"
        android:textSize="32sp"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/textPrimary"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="5dp"/>

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_below="@+id/what_activity_text"
        android:layout_alignStart="@+id/what_activity_text"
        android:layout_marginStart="90dp"
        android:layout_marginTop="103dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text|textCapCharacters|textCapWords|textCapSentences|textAutoCorrect"
        android:ems="10"
        android:id="@+id/high_user_input"
        android:selectAllOnFocus="false"
        android:textSize="20sp"
        android:textAlignment="center"
        android:layout_alignStart="@+id/what_activity_text"
        android:layout_alignBottom="@+id/scrollView"
        android:hint="@string/hint"
        android:layout_toStartOf="@+id/high_submit"
        android:elevation="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/what_activity"
        android:id="@+id/what_activity_text"
        android:textSize="42sp"
        android:paddingStart="20dp"
        android:paddingEnd="0dp"
        android:background="@drawable/border1"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:elevation="5dp"
        android:layout_marginTop="39dp"
        android:layout_below="@+id/high_engine_text"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/placeholder_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="22dp"
        android:id="@+id/high_date_text"
        android:layout_alignParentEnd="true"
        android:layout_alignStart="@+id/what_activity_text"
        android:textSize="18sp"
        android:textAlignment="center" />

    <Button
        android:text="@string/finished_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/high_submit"
        android:background="@drawable/border1"
        android:textColor="@color/colorPrimary"
        android:layout_alignBaseline="@+id/high_user_input"
        android:layout_alignBottom="@+id/high_user_input"
        android:layout_alignEnd="@+id/what_activity_text"
        android:elevation="5dp"/>

</RelativeLayout>