<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.clinced.myapplication.MainActivity"
    android:background="@color/textPrimary">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/engine_question"
        android:id="@+id/heading_text"
        android:focusableInTouchMode="false"
        android:textColor="@color/colorPrimary"
        android:textStyle="bold"
        android:textSize="48sp"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:elevation="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/select_option"
        android:id="@+id/instruction_text"
        android:textSize="22sp"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/heading_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/low_button"
        android:id="@+id/low_button"
        android:background="@drawable/border2"
        android:textColor="@color/textPrimary"
        android:maxWidth="180dp"
        android:width="180dp"
        android:height="64dp"
        android:clickable="true"
        android:focusable="false"
        android:longClickable="true"
        android:layout_marginTop="64dp"
        android:layout_below="@+id/instruction_text"
        android:layout_centerHorizontal="true"
        android:elevation="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/just_right_button"
        android:id="@+id/norm_button"
        android:background="@drawable/border2"
        android:textColor="@color/textPrimary"
        android:width="180dp"
        android:height="64dp"
        android:clickable="true"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/low_button"
        android:layout_alignStart="@+id/low_button"
        android:elevation="5dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/high_button"
        android:id="@+id/high_button"
        android:background="@drawable/border2"
        android:textColor="@color/textPrimary"
        android:width="180dp"
        android:height="64dp"
        android:clickable="true"
        android:layout_marginTop="11dp"
        android:layout_below="@+id/norm_button"
        android:layout_alignStart="@+id/norm_button"
        android:elevation="5dp"/>

</RelativeLayout>
